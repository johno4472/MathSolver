@model MathSolver.Models.MathFile

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h4>Choose a file from your computer containing a math equation to be calculated</h4>
    <form asp-action="Calculate">
        <div class="form-group">
            <input asp-for="EquationFile" type="text" class="form-control" placeholder="Copy and paste the exact file path here"/>
        </div>
        <div class="form-group" style="margin-top: 20px">
            <input type="submit" value="Calculate" class="btn btn-primary" />
        </div>
    </form>
</div>
